<Window x:Class="HouseDesign.PreviewPlan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PreviewPlan" Height="530" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="450"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions> 
        <GroupBox Grid.Row="0" Name="gridPreviewPlan" Header="Current House Plan" Margin="10">
            <Image Name="imgCurrentHousePlan" Width="550" Height="400"></Image>
        </GroupBox>
        <Button Grid.Row="1" Name="btnOK" Content="OK" HorizontalAlignment="Right" Width="50" Height="20" Click="btnOK_Click" Margin="5"></Button>
    </Grid>
</Window>
