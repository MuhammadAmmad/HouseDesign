<Window x:Class="HouseDesign.SetupConfiguration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrl="clr-namespace:HouseDesign.UserControls"
        Closed="Window_Closed"
        >
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="65"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Menu Name="menuShortcuts" Grid.Row="0">

            </Menu>
        <TabControl Grid.Row="1" Name="mainTabControl" Margin="5" SelectionChanged="mainTabControl_SelectionChanged">
            <TabItem Header="Categories">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TreeView Name="treeViewCategories" SelectedItemChanged="treeViewCategories_SelectedItemChanged" Grid.Column="0" 
                              TreeViewItem.Selected="treeViewCategories_Selected" MouseLeftButtonDown="treeView_MouseLeftButtonDown">
                    </TreeView>
                    <GroupBox Name="groupBoxRightSide" Grid.Column="1">
                        <GroupBox Name="groupBoxPreviewObject" Visibility="Collapsed" Header="Preview Object">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="50"></RowDefinition>
                                </Grid.RowDefinitions>
                                <GroupBox Grid.Row="0">
                                    
                                </GroupBox>
                                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
                                    <Button Name="btnAddObject" Content="Add Object" Click="btnAddObject_Click" Margin="5"></Button>
                                    <Button Name="btnCancel" Content="Cancel" Click="btnCancel_Click" Margin="5"></Button>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </GroupBox>
                              

                </Grid>
            </TabItem>
            <TabItem Header="Materials">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TreeView Name="treeViewMaterials" SelectedItemChanged="treeViewMaterials_SelectedItemChanged" MouseLeftButtonDown="treeView_MouseLeftButtonDown"  Grid.Column="0">
                    </TreeView>
                    <GroupBox Name="groupBoxPreviewMaterial" Visibility="Collapsed" Header="Preview Material" Grid.Column="1">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="50"></RowDefinition>
                            </Grid.RowDefinitions>
                            <GroupBox  Grid.Row="0">
                                <Image Name="imgPreviewMaterial" Height="100" Width="100"></Image>
                            </GroupBox>
                            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <Button Name="btnAddMaterial" Content="Add Material" Click="btnAddMaterial_Click" Margin="5"></Button>
                                <Button Content="Cancel" Click="btnCancel_Click" Margin="5"></Button>
                            </StackPanel>
                        </Grid>
                    </GroupBox>               

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
