<Window x:Class="HouseDesign.EditProperties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrl="clr-namespace:HouseDesign.UserControls"
        Title="EditProperties" Width="550" Height="600" Icon="Assets/icon1b.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <ctrl:ProjectPropertiesUserControl x:Name="projectProperties" Grid.Row="0"></ctrl:ProjectPropertiesUserControl>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Name="btnOK" Content="OK" Width="50" Click="btnOK_Click" Margin="5"></Button>
            <Button Name="btnCancel" Content="Cancel" Width="50" Click="btnCancel_Click" Margin="5"></Button>
        </StackPanel>
    </Grid>
</Window>
